{
  "name": "node_typescript_setup",
  "version": "1.0.0",
  "description": "Node + TypeScript + Jest + Babel + Eslint setup",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "set NODE_ENV=production && node dist/server.js",
    "dev": "set NODE_ENV=dev && ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "node_typescript_setup"
  },
  "author": "Vinicius S. Alves",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "@types/express": "^4.17.7",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "express": "^4.17.1"
  }
}

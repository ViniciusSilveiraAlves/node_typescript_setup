{
  "name": "node_typescript_setup",
  "version": "1.0.0",
  "description": "Node + TypeScript + Jest + Babel + Eslint setup",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "set NODE_ENV=dev && ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "test": "jest",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "makemigration": "node --require ts-node/register ./node_modules/typeorm/cli.js \"migration:generate\" \"-n\"",
    "migrations": "node --require ts-node/register ./node_modules/typeorm/cli.js \"migration:run\"",
    "madge": "madge --circular --extensions ts  src/"
  },
  "repository": {
    "type": "git",
    "url": "node_typescript_setup"
  },
  "author": "Vinicius S. Alves",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^8.0.29",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.2",
    "madge": "^3.9.2",
    "ts-jest": "^26.3.0",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.5",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql": "^2.14.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.25"
  }
}
